<RootWidget>:
    MainScreen:
        name: "main_screen"
        id: screen_ms_ID
    ExerciseScreen:
        name: "exercise_screen"
        id: screen_es_ID
    SessionStartScreen:
        name: "session_start_screen"
        id: screen_ss_ID
    StartHIITScreen
        name: "start_HIIT_screen"
        id: screen_sh_ID
    HIIT_Timer_Screen:
        name: "HIIT_timer_screen"
        id: screen_ht_ID
    Session_Exercise_Screen:
        name: "session_exercise_screen"
        id: screen_se_ID
    Session_Screen:
        name: "session_screen"
        id: screen_s_ID

<MainScreen>:
    MDRectangleFlatButton:
        text: "Exercises"
        font_size: "25sp"
        pos_hint: {'center_x':0.5, 'center_y':0.8}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "exercise_screen"
    MDRectangleFlatButton:
        text: "Planned sessions"
        font_size: "25sp"
        pos_hint: {'center_x':0.5, 'center_y':0.6}
    MDRectangleFlatButton:
        text: "Random session"
        font_size: "25sp"
        pos_hint: {'center_x':0.5, 'center_y':0.4}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "session_start_screen"
    MDRectangleFlatButton:
        text: "HIIT Timer"
        font_size: "25sp"
        pos_hint: {'center_x':0.5, 'center_y':0.2}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "start_HIIT_screen"



