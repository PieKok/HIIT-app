<RootWidget>:
    MainScreen:
        name: "main_screen"
        id: screen_ms_ID
    ExerciseScreen:
        name: "exercise_screen"
        id: screen_es_ID
    SessionStartScreen:
        name: "session_start_screen"
        id: screen_ss_ID
    StartHIITScreen
        name: "start_HIIT_screen"
        id: screen_sh_ID
    HIIT_Timer_Screen:
        name: "HIIT_timer_screen"
        id: screen_ht_ID
    Session_Exercise_Screen:
        name: "session_exercise_screen"
        id: screen_se_ID
    Session_Screen:
        name: "session_screen"
        id: screen_s_ID
    Session_Manager_Screen:
        name:"session_manager_screen"
        id: screen_sm_ID
    Session_Editor_Screen:
        name:"session_editor_screen"
        id: screen_sed_ID
    Pick_Exercise_Screen:
        name:"pick_exercise_screen"
        id: screen_pe_ID
    Planned_Session_Screen:
        name:"planned_session_screen"
        id: screen_pss_ID

<MainScreen>:
    MDFillRoundFlatButton:
        text: "Exercises"
        font_size: 20
        pos_hint: {'center_x':0.5, 'center_y':0.8}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "exercise_screen"
    MDFillRoundFlatButton:
        text: "Planned sessions"
        font_size: 20
        pos_hint: {'center_x':0.5, 'center_y':0.6}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "session_manager_screen"
    MDFillRoundFlatButton:
        text: "Random session"
        font_size: 20
        pos_hint: {'center_x':0.5, 'center_y':0.4}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "session_start_screen"
    MDFillRoundFlatButton:
        text: "HIIT Timer"
        font_size: 20
        pos_hint: {'center_x':0.5, 'center_y':0.2}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "start_HIIT_screen"



