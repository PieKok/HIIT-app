<Session_Editor_Screen>:
    GridLayout:
        spacing: "10dp"
        cols: 1

        Toolbar:
            id: toolbar
            title: 'Session edition'
            left_action_items: [["arrow-left", lambda x: app.change_screen('session_manager_screen','right')]]
            right_action_items: [["plus", lambda x: root.add_new_exo_button()]]

        GridLayout:
            spacing: "5dp"
            padding: "10dp"
            cols: 1

            MDLabel:
                id: session_name
                size_hint: (1, 0.05)
                hint_text: "Name of the session"

            MDSeparator:

            ScrollView:
                size_hint: (1, 0.9)
                MDList:
                    id: exoList

<EditDialogContent>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint_y: None
    height: "160dp"

    MDTextField:
        id: input_name
        hint_text: "Exercise name"

    MDTextField:
        id: input_work
        input_filter: "int"
        hint_text: "Work time [s]"

    MDTextField:
        id: input_rest
        input_filter: "int"
        hint_text: "Rest time [s]"