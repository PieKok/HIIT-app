<RootWidget>:
    MainScreen:
        name: "main_screen"
    ExerciseScreen:
        name: "exercise_screen"
    SessionStartScreen:
        name: "session_start_screen"

<MainScreen>:
    MDRectangleFlatButton:
        text: "Manage exercises database"
        pos_hint: {'center_x':0.5, 'center_y':0.6}
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "exercise_screen"
    MDRectangleFlatButton:
        text: "Start a session"
        pos_hint: {'center_x':0.5, 'center_y':0.4}
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "session_start_screen"

<ExerciseScreen>:
    GridLayout:
        cols: 1
        MDIconButton:
            icon: "home"
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "main_screen"
        ScrollView:
            MDList:
                id: containerList



<SessionStartScreen>:
    GridLayout:
        cols: 1
        MDLabel:
            text: "This is the screen where you set your settings to start a new session"
        MDIconButton:
            icon: "run"
        MDIconButton:
            icon: "home"
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = 'main_screen'


